{
  "name": "plz-vscode",
  "displayName": "Please",
  "description": "A VSCode language server integration for Please",
  "author": "peter.ebden@gmail.com",
  "license": "Apache-2.0",
  "icon": "plz_128.png",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/thought-machine/please-vscode"
  },
  "publisher": "please-build",
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "^1.36.0"
  },
  "activationEvents": [
    "onLanguage:plz"
  ],
  "main": "./out/main",
  "contributes": {
    "languages": [
      {
        "id": "plz",
        "aliases": [
          "Please",
          "please"
        ],
        "filenames": [
          "BUILD"
        ],
        "extensions": [
          ".plz",
          ".build_defs",
          ".build"
        ],
        "configuration": "./syntax/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "plz",
        "scopeName": "source.plz",
        "path": "./syntax/grammar.json"
      }
    ]
  },
  "configurationDefaults": {
    "[plz]": {
      "editor.insertSpaces": true,
      "editor.formatOnSave": true
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -b -w"
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.0.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "vsce": "^1.66.0",
    "vscode": "^1.1.35"
  }
}
